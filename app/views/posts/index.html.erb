<div style="width:1000px;margin:auto" >
<% @posts.each do |post| %>
  <div class="post">
    <h1><%= link_to post.title, post %></h1>
    <p style="font-size: 12px; color:grey; margin-top:-20px"><%= post.created_at.strftime('%d/%m/%Y') %></p>
    <p><%= post.snippet %></p>
    <div style="text-align:right;color:blue;width:100%"><%= link_to "читать дальше...", post, class: "more" %></div>
  </div>
  
<% end %>
</div>